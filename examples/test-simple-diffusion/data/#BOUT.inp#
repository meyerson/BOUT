# settings file for BOUT++
#
# Simple 1D advection test case
#
# By default everything in NetCDF.
# To change to PDB format, change the settings to
#   grid="data/advect.grd.pdb"
#   dump_format = "pdb"

##################################################
# settings used by the core code

NOUT = 100       # number of time-steps
TIMESTEP = 1.0e0   # time between outputs

ShiftXderivs = false # use shifted radial derivatives?
TwistShift = false  # use twist-shift condition?

MZ = 33     # number of points in z direction (2^n + 1)
ZMIN = 0.0
ZMAX = 0.25

MXG = 2
MYG = 2

#grid="data/advect.grd.cdl"  # Grid file
#grid="data/slab.6b5.r1.cdl"
grid="data/uedge.grd_std.cdl"
dump_format = "nc" # Output format. nc = NetCDF

##################################################
# derivative methods

[ddx]

first = C2 # order of first x derivatives (options are 2 or 4)
second = C2 # order of second x derivatives (2 or 4)
upwind = W3 # order of upwinding method (1, 4, or 0 = TVD)

[ddy]

first = C2
second = C2
upwind = W3

[ddz]

first = C4
second = C4
upwind = W3

##################################################
# Solver settings

[solver]

# mudq, mldq, mukeep, mlkeep preconditioner options
ATOL = 1.0e-10 # absolute tolerance
RTOL = 1.0e-5  # relative tolerance

##################################################
# settings for gas_compress

[gas]

include_viscosity = false
viscosity = 0.0

v0_multiply = -1.0

[All]
scale = 0.0 # default size of initial perturbations

# form of initial profile:
# 0 - constant
# 1 - Gaussian
# 2 - Sinusoidal
# 3 - Mix of mode numbers (like original BOUT)

xs_opt = 3

ys_opt = 6ls

zs_opt = 6

ys_s0 = 0.5
ys_wd = 0.1

zs_mode = 1 # toroidal mode number

# Boundary conditions
# dirichlet = zero value
# neumann = zero gradient

bndry_all = neumann # Set all boundaries to Neumann

[density]
scale = 1

[solver]
#type=petsc
