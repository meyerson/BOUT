#!/usr/bin/env python

tol = 1e-7                  # Absolute tolerance

from boututils import shell,launch
from boutdata import collect
import numpy as np
from sys import stdout, exit

print "Making Delp2 operator test"
shell("make > make.log")

# The command to run
exefile = "./test_delp2"

# List of settings to apply
settings = ["mxg=2 mesh_nx=36", 
            "mxg=1 mesh_nx=34"]


success = True

for i, opts in enumerate(settings):
  # Read benchmark values
  print "Args: " + opts
  cmd = exefile + " " + opts
  
  s, out = launch(cmd, nproc=1, pipe=True)
  f = open("run.log."+str(i)+".1", "w")
  f.write(out)
  f.close()
  n0 = collect("n", path="data",info=False)
  
  for nproc in [2,4]:
    shell("rm data/BOUT.dmp.*.nc")
    
    stdout.write("   %d processor...." % (nproc))
    s, out = launch(cmd, nproc=nproc, pipe=True)
    f = open("run.log."+str(i)+"."+str(nproc), "w")
    f.write(out)
    f.close()
    
    # Collect output data
    n = collect("n", path="data",info=False)
    if np.shape(n) != np.shape(n0):
      print "Fail, wrong shape"
      success = False
    diff =  np.max(np.abs(n - n0))
    if diff > tol:
      print "Fail, maximum difference = "+str(diff)
      success = False
    else:
      print "Pass"

if success:
  print " => All Delp2 tests passed"
  exit(0)
else:
  print " => Some failed tests"
  exit(1)
